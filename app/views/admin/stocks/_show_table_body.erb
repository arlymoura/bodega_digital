<% products.each do |product| %>
  <tr>
    <td>
      <div class="form-check form-check-sm form-check-custom form-check-solid">
        <input class="form-check-input" type="checkbox" value="1" />
      </div>
    </td>
    <td>
      <div class="d-flex align-items-center">
        <!--begin::Thumbnail-->
        <% if product.thumbnail.attached? %>
            <%= image_tag product.thumbnail, size: '50x50' %>
          <% else %>
            <%= image_tag 'avatars/blank.png', size: '50x50' %>
          <% end %>
        <!--end::Thumbnail-->
      </div>
    </td>

    <td class="pe-0 dt-type-numeric">
      <span class="fw-bold"><%= product.name %></span>
    </td>
    <td><span class="fw-bold"><%= product.product_variants.first.sku %></span></td>
    <td class="text-center"><%= stock_item_status_badge(product.product_variants.first.stock_items.first) %></td>
    <td>R$ <%= product.product_variants.first.price %></td>
    <td><span class="fw-bold"><%= product_variant_status_badge(product.product_variants.first.status) %></span></td>



    <td class="text-center">
      <a
        href="#"
        class="btn btn-sm btn-light btn-flex btn-center btn-active-light-primary"
        data-kt-menu-trigger="click"
        data-kt-menu-placement="bottom-end"
      >
        Ações
        <i class="ki-outline ki-down fs-5 ms-1"></i>
      </a>
      <!--begin::Menu-->
      <div
        class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4"
        data-kt-menu="true"
      >
        <!--begin::Menu item-->
        <div class="menu-item px-3">
          <a
            href=<%= edit_admin_stock_stock_item_path(
              product.product_variants.first.stock_items.first,
              product.product_variants.first.stock_items.first.stock
            )%>
            class="menu-link px-3"
          >
            Editar
          </a>
        </div>
        <!--end::Menu item-->

        <!--begin::Menu item-->
        <div class="menu-item px-3">
          <a
            href="#"
            class="menu-link px-3"
            data-kt-ecommerce-team-filter="delete_row"
          >
            Apagar
          </a>
        </div>
        <!--end::Menu item-->
      </div>
      <!--end::Menu-->
    </td>
  </tr>
<% end %>

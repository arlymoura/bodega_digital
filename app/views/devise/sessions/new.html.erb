<% content_for :layout do %>
<div
  class="d-flex flex-column flex-lg-row-fluid w-lg-50 p-10 order-2 order-lg-1"
>
  <!--begin::Form-->
  <div class="d-flex flex-center flex-column flex-lg-row-fluid">
    <!--begin::Wrapper-->
    <div class="w-lg-500px p-10">
      <!--begin::Form-->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <!--begin::Heading-->
        <div class="text-center mb-11">
          <!--begin::Title-->
          <h1 class="text-gray-900 fw-bolder mb-3">Metronic</h1>
          <!--end::Title-->

          <!--begin::Subtitle-->
          <div class="text-gray-500 fw-semibold fs-6">
            Plataforma de Gerenciamento de Equipes e Desempenho
          </div>
          <!--end::Subtitle--->
        </div>
        <!--begin::Heading-->

        <!--begin::Login options-->

        <!--end::Login options-->

        <!--begin::Separator-->
        <div class="separator separator-content my-14">
          <span class="w-125px text-gray-500 fw-semibold fs-7">Login</span>
        </div>
        <!--end::Separator-->

        <!--begin::Input group--->
        <div class="fv-row mb-8 fv-plugins-icon-container">
          <!--begin::Email-->
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control bg-transparent", value: 'arlymoura@gmail.com' %>
          <!--end::Email-->
          <div
            class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"
          ></div>
        </div>

        <!--end::Input group--->
        <div class="fv-row mb-3 fv-plugins-icon-container">
          <!--begin::Password-->
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control bg-transparent", value: "123456" %>
          <!--end::Password-->
          <div
            class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"
          ></div>
        </div>
        <!--end::Input group--->

        <!--begin::Wrapper-->
        <div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
          <div></div>

          <!--begin::Link-->
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "link-primary" %>
          <% end %>
          <!--end::Link-->
        </div>
        <!--end::Wrapper-->

        <!--begin::Submit button-->
        <div class="d-grid mb-10">
            <%= f.submit "Entrar", class: "btn btn-primary" %>
        </div>
        <!--end::Submit button-->

        <!--begin::Sign up-->
        <div class="text-gray-500 text-center fw-semibold fs-6">
        </div>
        <!--end::Sign up-->

      <% end %>
      <!--end::Form-->
    </div>
    <!--end::Wrapper-->
  </div>
  <!--end::Form-->

</div>
<% end %>
<%= render template: "#{Rails.configuration.settings.KT_THEME_LAYOUT_DIR}/auth" %>
